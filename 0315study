import csv

def read_portfolio(filename):
    portfolio =[]
    
    with open(filename) as f:
        rows = csv.reader(f)
        headers = next(rows)
        
        for row in rows:
            stock = {
                'name' : row[0],
                'shares' : int(row[1]),
                'price' : float(row[2])
            }
            portfolio.append(stock)
            
        for s in portfolio:
            print(s)
            
def read_prices(filename):
    
    prices = {}
    with open(filename) as f:
        rows = csv.reader(f)
        for row in rows:
            try:
                prices[row[0]] = float(row[1])
            except IndexError:
                pass
    return prices

portfolio = read_portfolio('C:\portfolio.csv')
prices = read_prices('C:\prices.csv')

for s in prices:
            print(s)
        
total_coast = 0.0
total_value = 0.0

print('current value', total_value)
print('current coast', total_coast)
